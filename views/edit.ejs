<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="edit your blog post"><%=blog.body%></textarea> 
        </div>
        <div class="ui buttons">
            <button class="ui button"><a href="/blogs">Cancel</a></button>
            <div class="or"></div>
            <input class="ui positive button" type="submit">Save</button>
          </div>
    </form>
</div>

<%- include("partials/footer") %>